pipeline {
  agent any
  stages{
    stage('checkout SCM'){
      steps{
        git branch:'master' , url:'https://github.com/sandeepsirivella/simple-reactjs-app--1.git'
      }
    }
    stage('build'){
      steps{
        sh 'npm install'
        sh 'npm run build'
      }
    }
    stage('depoly'){
      steps{
        sh """
          docker build -t mass:1 .
          docker run -d -p  6065:80 mass:1
        """
      }
    }
  }
  post {
        success {
            echo "Deployment completed successfully 🚀"
        }
        failure {
            echo "Pipeline failed ❌"
        }
    }
}
